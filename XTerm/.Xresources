! =============================================================================
! XTerm 配置文件 - 修复版本（无重复定义）
! 加载方法: xrdb -merge ~/.Xresources
! =============================================================================

! ==================== 基础设置 ====================
! 终端类型 - 支持 256 色和现代特性
XTerm.termName: xterm-256color

! 窗口标题设置
XTerm.title: Terminal
XTerm*iconName: Terminal

! 字符编码 - 完整的 UTF-8 支持
XTerm*locale: true
XTerm*utf8: 2
XTerm*utf8Title: true

! ==================== 外观设置 ====================
! 窗口大小（宽度x高度+X偏移+Y偏移）
XTerm*geometry: 120x30+100+100

! ==================== 字体配置 ====================
! 现代等宽字体配置
! XTerm*faceName: JetBrains Mono:size=12:antialias=true:hinting=true
! XTerm*faceNameDoublesize: JetBrains Mono:size=12
XTerm*faceName: Maple Mono NF CN:size=12:antialias=true:hinting=true
XTerm*faceNameDoublesize: Maple Mono NF CN:size=12
XTerm*renderFont: true
XTerm*allowBoldFonts: true

! 备用字体（如果主字体不可用）
XTerm*font: -*-fixed-medium-r-*-*-14-*-*-*-*-*-iso10646-1
XTerm*boldFont: -*-fixed-bold-r-*-*-14-*-*-*-*-*-iso10646-1

! 字体渲染优化
XTerm*scaleHeight: 1.0
XTerm*limitFontsets: 5

! ==================== 配色方案 - One Dark 主题 ====================
! 主色调
XTerm*background: #282c34
XTerm*foreground: #abb2bf
XTerm*cursorColor: #528bff
XTerm*cursorBlink: true

! 选择区域颜色
XTerm*highlightSelection: true
XTerm*highlightColor: #3e4451

! ANSI 颜色 - One Dark 配色
XTerm*color0:  #282c34  ! 黑色
XTerm*color1:  #e06c75  ! 红色
XTerm*color2:  #98c379  ! 绿色  
XTerm*color3:  #e5c07b  ! 黄色
XTerm*color4:  #61afef  ! 蓝色
XTerm*color5:  #c678dd  ! 紫色
XTerm*color6:  #56b6c2  ! 青色
XTerm*color7:  #abb2bf  ! 白色

! 亮色
XTerm*color8:  #5c6370  ! 亮黑色（灰色）
XTerm*color9:  #e06c75  ! 亮红色
XTerm*color10: #98c379  ! 亮绿色
XTerm*color11: #e5c07b  ! 亮黄色
XTerm*color12: #61afef  ! 亮蓝色
XTerm*color13: #c678dd  ! 亮紫色
XTerm*color14: #56b6c2  ! 亮青色
XTerm*color15: #ffffff  ! 亮白色

! ==================== 滚动和历史（统一配置）====================
! 滚动条设置
XTerm*scrollBar: true
XTerm*rightScrollBar: true
XTerm*scrollBarWidth: 10

! 历史和滚动行为（所有相关设置放在一起）
XTerm*saveLines: 50000
XTerm*scrollTtyOutput: false
XTerm*scrollKey: true
XTerm*jumpScroll: true
XTerm*multiScroll: true
XTerm*fastScroll: true

! ==================== 选择和剪贴板 ====================
! 剪贴板集成
XTerm*selectToClipboard: true
XTerm*trimSelection: true

! 鼠标选择行为
XTerm*on3Clicks: regex ([[:alpha:]]+://)?([[:alnum:]!#+,./=?@_~-]|(%[[:xdigit:]][[:xdigit:]]))+

! 防止意外粘贴
XTerm*confirmPaste: true
XTerm*pasteConfirm: false

! ==================== 键盘和快捷键 ====================
! Alt 键配置
XTerm*metaSendsEscape: true
XTerm*eightBitInput: false

! Delete 键行为
XTerm*backarrowKey: false
XTerm*deleteIsDEL: true

! 现代快捷键支持
XTerm*vt100.translations: #override \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>N: spawn-new-terminal() \n\
    Ctrl <Key>plus: larger-vt-font() \n\
    Ctrl <Key>minus: smaller-vt-font() \n\
    Ctrl <Key>0: set-vt-font(d) \n\
    Shift <Key>Up: scroll-back(1) \n\
    Shift <Key>Down: scroll-forw(1) \n\
    Shift <Key>Prior: scroll-back(1,halfpage) \n\
    Shift <Key>Next: scroll-forw(1,halfpage) \n\
    Shift <Key>Home: scroll-back(1000000) \n\
    Shift <Key>End: scroll-forw(1000000)

! ==================== 性能和渲染优化 ====================
! 渲染优化（统一配置，避免重复）
XTerm*doubleBuffer: true
XTerm*buffered: true
XTerm*bufferedFPS: 60

! 界面优化
XTerm*pointerMode: 0
XTerm*borderWidth: 0
XTerm*internalBorder: 2

! ==================== 现代终端特性 ====================
! 启用现代终端功能
XTerm*allowColorOps: true
XTerm*allowFontOps: true
XTerm*allowTcapOps: true
XTerm*allowTitleOps: true
XTerm*allowWindowOps: false

! 鼠标支持
XTerm*reportMouse: true
XTerm*reportButton1Motion: false
XTerm*reportButton2Motion: false

! ==================== 响铃设置 ====================
! 使用视觉响铃，避免声音干扰
XTerm*visualBell: true
XTerm*bellSuppressTime: 100

! ==================== URL 处理 ====================
! URL 识别和点击
XTerm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
XTerm*on2Clicks: regex ([[:alpha:]]+://)?([[:alnum:]!#+,./=?@_~-]|(%[[:xdigit:]][[:xdigit:]]))+

! ==================== 菜单设置 ====================
! 右键菜单配置
XTerm*SimpleMenu*BackingStore: NotUseful
XTerm*SimpleMenu*menuLabel.font: -*-helvetica-bold-r-normal-*-12-*-*-*-*-*-iso8859-1
XTerm*SimpleMenu*menuLabel.vertSpace: 100
XTerm*SimpleMenu*HorizontalMargins: 16
XTerm*SimpleMenu*Sme.height: 16

! 主菜单项
XTerm*mainMenu.Label: XTerm
XTerm*mainMenu*toolbar*quit.Label: 退出
XTerm*mainMenu*toolbar*kill.Label: 强制关闭

! =============================================================================
! 修复说明：
! 1. 移除了重复的 jumpScroll 和 multiScroll 定义
! 2. 将所有滚动相关设置统一放在 "滚动和历史" 部分
! 3. 将性能设置整理到单独部分，避免重复
! 4. 保持了所有功能，但组织更清晰
!
! 应用方法：
! 1. 清理旧配置: xrdb -remove
! 2. 保存此文件为 ~/.Xresources  
! 3. 加载配置: xrdb -merge ~/.Xresources
! 4. 验证无警告: xrdb -query | grep -i xterm >/dev/null 2>&1 && echo "配置加载成功"
! =============================================================================
